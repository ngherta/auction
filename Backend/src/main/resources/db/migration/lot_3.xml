<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
  <changeSet id="1" author="ngh">
    <createTable tableName="user">
      <column name="id" type="bigserial">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="email" type="varchar(255)">
        <constraints unique="true"></constraints>
      </column>
      <column name="first_name" type="varchar(255)"></column>
      <column name="last_name" type="varchar(255)"></column>
      <column name="login" type="varchar(255)">
        <constraints unique="true"></constraints>
      </column>
      <column name="password" type="varchar(255)"></column>
      <column name="role" type="varchar(255)"></column>
      <column name="user_rating" type="varchar(255)"></column>
    </createTable>
    <rollback>
      <dropTable tableName="user"/>
    </rollback>
  </changeSet>
</databaseChangeLog>